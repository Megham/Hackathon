<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @idea.title %>
</p>

<p>
  <b>Desctiption:</b>
  <%= @idea.desctiption %>
</p>

<p>
  <b>Owner:</b>
  <%= full_name(@idea.owner) %>
</p>

<h4>Comments</h4>
<% @idea.comments.each do |entry| %>
<div class="comment_body">
  <b><%= entry.name %></b><br/>
  <div class="comment"><%= entry.comment %></div>
</div>
<div class="comment_border"></div>
<% end %>
<h4>Post a comment</h4>
<%= form_for [@idea,@idea.comments.new(:name => full_name(@gmail_username))] do |f| %>
<div class="comment_form">
  <div class="field">
<!--    <%= f.label :name %><br />
    <%= f.text_field :name, {:disabled => "disabled"} %> -->
    <%= f.hidden_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, rows: 5 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %><br/>
<% if @idea.owner == @gmail_username %>
  <%= link_to 'Edit', edit_idea_path(@idea)  %> |
<% end %>
<%= link_to 'Back', ideas_path %>
